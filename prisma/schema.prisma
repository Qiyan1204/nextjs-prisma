generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  email               String               @unique
  password            String?              // å¯é€‰ï¼Œå› ä¸º Google ç™»å½•ä¸éœ€è¦å¯†ç 
  role                Role                 @default(STUDENT)
  image               String?              // Google å¤´åƒ
  emailVerified       DateTime?            // NextAuth éœ€è¦
  posts               Post[]
  passwordResetTokens PasswordResetToken[]
  accounts            Account[]            // NextAuth OAuth è´¦æˆ·
  sessions            Session[]            // NextAuth ä¼šè¯
  createdAt           DateTime             @default(now())
}

// NextAuth Account æ¨¡å‹ï¼ˆç”¨äº OAuthï¼‰
model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session æ¨¡å‹
model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken æ¨¡å‹ï¼ˆç”¨äºé‚®ç®±éªŒè¯ï¼‰
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

// Stock price history for moving average calculations
model StockPrice {
  id        Int      @id @default(autoincrement())
  symbol    String
  date      DateTime
  open      Float
  high      Float
  low       Float
  close     Float
  volume    BigInt?
  createdAt DateTime @default(now())

  @@unique([symbol, date])
  @@index([symbol])
  @@index([date])
}

// Watchlist items
model WatchlistItem {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique
  name      String
  emoji     String   @default("ğŸ“ˆ")
  createdAt DateTime @default(now())
}

// Portfolio positions
model Portfolio {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique
  shares    Float
  avgPrice  Float
  totalCost Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Transaction history
model Transaction {
  id        Int      @id @default(autoincrement())
  symbol    String
  type      String   // 'buy' or 'sell'
  shares    Float
  price     Float
  total     Float
  createdAt DateTime @default(now())

  @@index([symbol])
}

// Backtest results storage
model BacktestResult {
  id              Int      @id @default(autoincrement())
  symbol          String
  strategyName    String
  startDate       DateTime
  endDate         DateTime
  initialCapital  Float
  finalValue      Float
  totalReturn     Float
  totalTrades     Int
  winningTrades   Int
  losingTrades    Int
  maxDrawdown     Float
  sharpeRatio     Float?
  tradesJson      String   // JSON string of all trades
  createdAt       DateTime @default(now())

  @@index([symbol])
}

enum Role {
  STUDENT
  ADMIN
  INVESTOR
}